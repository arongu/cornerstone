<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>cornerstone</display-name>
    <servlet>
        <servlet-name>cornerstone</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <!-- This is your bootstrap class -->
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>cornerstone.webapp.jersey.Application</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- tomcat7 plugin sets the application's root url path!
         url-pattern appends what has been set by tomcat-plugin
         tomcat-plugin + <url-pattern>
         e.g.:   /aaa + /bbb => /aaa/bbb
    -->
    <servlet-mapping>
        <servlet-name>cornerstone</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
